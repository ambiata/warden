                     , async                           >= 2.0 && <= 2.1.0
                     , attoparsec                      == 0.12.*
                     , bytestring                      == 0.10.*
                     , cassava                         == 0.4.*
                     , containers                      == 0.5.*
                     , directory                       == 1.2.*
                     , either                          == 4.3.*
                     , filepath                        == 1.3.*
                     , ieee754                         == 0.7.*
                     , lens                            == 4.9.*
                     , optparse-applicative            == 0.11.*
                     , quickcheck-instances            == 0.3.*
                     , resourcet                       == 1.1.*
                     , semigroups
                     , temporary                       == 1.2.*
                     , text
                     , time                            == 1.5.*
                     , transformers                    >= 0.3 && < 5
                     , unix                            >= 2.7.1 && < 2.7.3
                     , vector                          == 0.10.*

